@using RegexNodes.Shared.NodeTypes;
@inject INodeHandler NodeHandler
@inject INodeDragService NodeDragService

    <div class="viewport sidebar panel">
        <div class="viewport-title-bar">
            <h1>Nodes</h1>
        </div>
        
        @foreach (var node in exampleNodes)
        {
            <NodeListPreview Data="node"/>
        }
    </div>

@functions{
    protected Type[] nodeTypes { get; set; }
    List<INode> exampleNodes { get; set; } = new List<INode>
    {
        new TextNode(),
        new WildcardNode(),
        new CharSetNode(),
        new AnchorNode(),
        new WhitespaceNode(),
        new UnicodeNode(),
        new CommentNode(),
        new OrNode(),
        new ConcatNode(),
        new GroupNode(),
        new QuantifierNode(),
        new ReferenceNode(),
        new LookaroundNode(),
        new IfElseNode(),
        new FlagNode(),
        new OutputNode(),
    };
}
